# Database
DATABASE_URL=sqlite:///./predictionleague.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/predictionleague

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Frontend URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Email Configuration (required for email signup)
# For Gmail, use app-specific password: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@tweetleague.com
FROM_NAME=CCFC Tweet League

# OAuth (optional for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Twitter/X OAuth 1.0a (for Sign in with X)
# Get these from https://developer.twitter.com/en/apps
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret-key
TWITTER_CALLBACK_URL=http://localhost:3000/api/auth/callback/twitter

# NextAuth Twitter OAuth (alternative setup)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Football API (optional)
FOOTBALL_API_KEY=your-football-data-api-key
FOOTBALL_API_URL=https://api.football-data.org/v4